a = input("What is your the lucky number?")
if(int(a) > 0):
    print("Your lucky number is positive")

elif(int(a) < 0):
    print("Your lucky number is negative")

else:
    print("Your lucky number is universal number")

i = 1
while i < 6:
    print(i)
    i = i + 1
print("Done")

i = 2
while i <= 10:
    print(i)
    i = i + 2
print("Done")

